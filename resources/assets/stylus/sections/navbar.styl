.navbar
    background: white//rgba(47,47,47,0.9) !important
    border-bottom: none !important
    height: 20px
    color: white
    box-shadow: 0 1px 10px #4c4c4c

    .phones
        float: left
        height: 65px 
        padding-top: 3px

    .phone
        display: block
        color: gray
        font-size: 16px
        font-weight: bold 
        letter-spacing: 1.2px

    &.navbar-default .navbar-brand
        color: black
        font-size: 26px
        font-weight: bold
        transition: all 0.2s ease-in-out
        margin-right: 20px
        padding: 0

        img
            width: 48px
            display: inline
            margin: 0 10px 10px 0

        i
            color: white
            font-size: 29px
            padding-bottom: 10px
            display: inline-block

    .navbar-nav > li > a
        font-family: 'Open Sans'
        color: black !important
        text-transform: uppercase
        font-weight: bold
        font-size: 14px
        transition: background 0.1s ease-in-out

        &:hover
            color: white
            background: darken(white, 5%) !important
