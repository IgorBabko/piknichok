// sections
@import 'sections/navbar'
@import 'sections/main'
@import 'sections/discount'
@import 'sections/about'

body
    height: 1000px
    margin-top: 70px
    
h1
    font-family: 'Lato'
    color: white
    text-align: center
    font-size: 72px

h2
    text-transform: uppercase

.about
    padding: 100px 0

.bx-wrapper
    margin: 0
    position: absolute
    top: 70px 
    left: 0
    width: 100vw
    border: none

    .bxslider
        img
            width: 100vw
            height: calc(100vh - 70px)
