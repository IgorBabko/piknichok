.shipping
    padding: 50px 0
    //background-image: url('../img/about-background.png')
    // box-shadow: inset 0 0 10px 0px #3a3a3a

    h2
        margin-bottom: 50px

    .heading-container
        display: block !important

    .row
        margin: 0

    .container
        display: flex
        justify-content: center
        align-items: center

    .subsection

        &--dark
            background: #eee

        .container > div img
            margin: 0 auto
            display: block

        p
            font-size: 20px 
            color: gray

            @media screen and (max-width: 768px)
                font-size: 16px

    img
        width: 200px
        @media screen and (max-width: 992px)
            width: 150px
        @media screen and (max-width: 768px)
            max-width: 94px
        @media screen and (max-width: 480px)
            max-width: 64px

    .step
        float: left
        margin-right: 10px
        display: flex
        justify-content: center
        align-items: center
        width: 64px
        height: 64px
        text-align: center
        font-size: 32px
        border-radius: 50%
        border: 2px solid black
        display: none

