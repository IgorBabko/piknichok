// utils/colors
@import 'utils/colors'

// sections
@import 'sections/navbar'
@import 'sections/main'
@import 'sections/discount'
@import 'sections/about'
@import 'sections/photos'
@import 'sections/specs'
@import 'sections/shipping'
@import 'sections/offer'
@import 'sections/reviews'
