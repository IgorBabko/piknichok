.offer
    color: white

    h2
        color: white
        padding-bottom: 50px

    .list
        padding: 50px 0
        background: #af1d1d

    .countdown-wrapper
        background: red
        background: darken(#af1d1d, 30%) !important
        box-shadow: inset 0 0 20px #4e0404

    .list-wrapper
        display: flex
        justify-content: center
        align-items: center

        @media screen and (max-width: 768px)
            display: block

    img
        max-width: 300px
        display: block
        margin: 0 auto
        float: right

    .conuntdown-wrapper
        background: #c51616
        border: 2px solid black

    .offer-list 
        list-style: disc
        li
            color: white
            font-size: 28px

    form
        text-align: center
        padding: 0 0 50px 0

        div
            display: inline-block
            position: relative
            margin: 0 10px

        i
            position: absolute
            top: 3px
            left: 10px
            font-size: 32px
            padding-top: 5px
            color: #ba5d04


        input
            border: none
            height: 50px
            background: #540c0c
            //box-shadow: 0 0 5px 5px black
            font-size: 20px
            font-weight: bold
            color: white
            padding: 0 25px 0 50px

            &:focus
                outline: none !important

        button
            font-size: 26px
            background: #24bd24
            border: none
            padding: 15px
            border-radius: 4px
            margin-top: 20px
            box-shadow: 0px 2px 5px #290808

            &:hover
                background: darken(#24bd24, 20%)
