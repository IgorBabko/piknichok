// utils/colors
@import 'utils/colors'

// sections
@import 'sections/navbar'
@import 'sections/main'
@import 'sections/discount'
@import 'sections/about'
@import 'sections/photos'
@import 'sections/specs'
@import 'sections/shipping'
@import 'sections/offer'
@import 'sections/order'
@import 'sections/reviews'
@import 'sections/email'
@import 'sections/footer'

::-webkit-input-placeholder 
    color: #f0f0f0 
::-moz-placeholder
    color: #f0f0f0 /* Firefox 19+ */
:-moz-placeholder
    color: #f0f0f0 /* Firefox 18- */
:-ms-input-placeholder
    color: #f0f0f0

body
    height: 1000px
//    margin-top: 70px

.up .inn,
.down .inn
    background: #ffd941 !important
    color: #ff3c3c !important

section
    width: 100vw !important

.email-form
    margin-top: 30px

h1
    font-family: 'Lato'
    color: white
    text-align: center
    font-size: 72px

.flip-clock-label
    display: none

.nav-list-link.active
    background: darken(white, 5%)

h2
    text-transform: uppercase

.bx-wrapper
    margin: 0
    position: absolute
    top: 0 
    left: 0
    width: 100vw
    border: none

    .bxslider
        img
            width: 100vw
            height: 100vh 


.parallax-window
    height: 600px
    background: transparent

h2
    font-weight: bold


// forms
.input-field,
textarea
    display: inline-block
    width: 100%
    background: rgba(183, 183, 183, 0.66)
    border: none
    padding: 10px
    font-size: 22px
    color: white
    margin: 0 0 30px 0 

    &:focus
        outline: none  !important

textarea
    height: 200px

.email-overlay
    background: rgba(0,0,0,0.4)
    width: 100%
    height: 600px
    position: absolute
    top: 0
    left: 0

// flipclock
.flip-clock-divider .flip-clock-label
    color: #cacaca

.flip-clock-wrapper
    display: flex
    justify-content: center
    align-items: center
    padding: 50px 0
    margin: 0


.testimonial 
    background: url(../img/testimonial-bg.png)

.testimonial-carousel .item 
    padding: 25px 40px 40px
    background: rgba(34, 34, 34, 0.8)
    border-radius: 4px

.testimonial-carousel .item p 
    font-style: italic
    font-size: 24px

.testimonial-carousel .item .client img,
.testimonial-carousel .item .client ul 
    display: inline-block
    vertical-align: middle

.testimonial-carousel .item .client img 
    height: 50px
    width: 50px
    max-width: 100%
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.3)
    border-radius: 4px

.testimonial-carousel .item .client-info 
    margin-left: 10px

.testimonial-carousel .item .client-info li 
    text-align: left

.testimonial-carousel .item .client-info li:first-child 
    font-size: 18px

.owl-theme .owl-controls .owl-page.active span,
.owl-theme .owl-controls.clickable .owl-page:hover span 
    background: #e74c3c


