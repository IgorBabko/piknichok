.about
    background: #f1f1f1
    padding: 50px 0 100px

    p
        margin-top: 30px
        font-size: 18px

    div
        font-size: 20px

    img
        width: 400px
        box-shadow: 0px 3px 10px 2px #444444
        margin: 0 auto
        display: block 

    .gallery-button
        background: $green
        color: white
        width: 200px
        height: 60px 
        border: none
        font-size: 20px
        font-weight: bold
        transition: background 0.1s ease-in-out

        &:hover
            background: darken($green, 20%)

