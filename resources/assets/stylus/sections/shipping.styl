.shipping
    padding: 50px 0

    .heading 
        font-size: 48px
        color: #5d5d5d
        display: block

    .row
        margin: 0

    .container
        display: flex
        justify-content: center
        align-items: center

    .subsection

        &--dark
            background: #eee

    img
        max-width: 300px

    .step
        float: left
        margin-right: 10px
        display: flex
        justify-content: center
        align-items: center
        width: 64px
        height: 64px
        text-align: center
        font-size: 32px
        border-radius: 50%
        border: 2px solid black

