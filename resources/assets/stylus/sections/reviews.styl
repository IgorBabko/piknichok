.reviews
    background: #f1f1f1 //#6db33f
    padding: 50px 0
    color: black

    .reviews-block-wrapper
        position: relative

        .fa-quote-left
            position: absolute
            top: 20px 
            left: 20px 
            z-index: 3000
            font-size: 42px
            color: #929292

        .fa-quote-right
            position: absolute
            bottom: 20px 
            right: 20px 
            z-index: 3000
            font-size: 42px
            color: #929292

    .reviews-block
        background: white//#62993d
        padding: 60px
        margin-top: 20px
        box-shadow: 0 2px 3px 0px #c7c7c7

        .review
            font-size: 24px
            color: #929292
            text-align: center

    .add-review-button
        background: brown
        color: white
        width: 200px
        float: right
        height: 60px 
        border: none
        font-size: 20px
        font-weight: bold
        transition: background 0.1s ease-in-out

        &:hover
            background: darken(brown, 20%)
